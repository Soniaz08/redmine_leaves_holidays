<fieldset>
	<legend><%= "Plugin parameters" %></legend>
	<%- trackers = Tracker.all.collect{|t| [t.name, t.id]} -%>
	<p>
		<label><%= l(:label_tracker) %>:</label>
		<%- options = options_for_select(trackers, RedmineLeavesHolidays::Setting.default_tracker_id) -%>
		<%= select_tag "settings[default_tracker_id]", options, :multiple => false %>
	</p>

	<%- projects = Project.all.collect{|t| [t.name, t.id]} -%>
	<p>
		<label><%= l(:label_project) %>:</label>
		<%- options = options_for_select(projects, RedmineLeavesHolidays::Setting.default_project_id) -%>
		<%= select_tag "settings[default_project_id]", options, :multiple => false %>
	</p>

	<p>
		<label><%= l(:label_leaves_default_working_hours) %>:</label>
		<%= number_field_tag 'settings[default_working_hours_week]', RedmineLeavesHolidays::Setting.working_hours_week, :min => 0, :max => 90, :step => 1 %>
	</p>

	<p>
		<label><%= l(:label_leaves_default_days_year) %>:</label>
		<%= number_field_tag 'settings[default_days_leaves_year]', RedmineLeavesHolidays::Setting.days_leaves_year, :min => 0, :step => 1 %>
	</p>
</fieldset>