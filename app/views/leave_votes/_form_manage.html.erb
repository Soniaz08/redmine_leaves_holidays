<h2>Vote for this Leave Request:</h2>
<% roles = LeavesHolidaysLogic.allowed_common_project(User.current, leave.user, 2) %>
<p>Note: You are being consulted as a:</p>
<% roles.each do |role| %>
 <p><strong><%= role[:name] %></strong> for the project <strong><%= role[:project] %></strong></p>
<% end %>

<%= form_for [leave, vote] do |f| %>
	
 	<div class="box tabular">
		<% if vote.errors.any? %>
			<div class="flash">
				<ul>
			  		<% vote.errors.full_messages.each do |msg| %>
			    		<li><%= msg %></li>
			  		<% end %>
				</ul>
			</div>
		<% end %>
	</div>

	<div>

		<fieldset>
			<p>
				Consultation:
				<%= f.radio_button :vote, 'yes' %>
				<%= f.label :vote, 'Yes', :value => 'yes' %>
				<%= f.radio_button :vote, 'no' %>
				<%= f.label :vote, 'No', :value => 'no' %>
			</p>

			<p>
				<label>Comments:</label>
				<%= f.text_field :comments, {:size => 75 } %>
			</p>


		</fieldset>
	</div>
	<%= f.submit 'Submit', data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'Back', leave_request_path(leave) %>