<h3 class="title"><%= "New leave management rule" %></h3>

<%= form_for @leave_management, :as => :leave_management, :url => project_leave_managements_path(@project), :remote => true, :method => :post do |f| %>
  <%= render :partial => 'new_form' %>
  <p class="buttons">
    <%= submit_tag l(:button_add), :id => 'leave_management-add-submit' %>
    <%= submit_tag l(:button_cancel), :name => nil, :onclick => "hideModal(this);", :type => 'button' %>
  </p>
<% end %>